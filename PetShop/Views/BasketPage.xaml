<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:PetShop.ViewModels"
    x:Class="PetShop.Views.BasketPage">

    <ContentPage.BindingContext>
        <viewmodel:BasketViewModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <StackLayout>
            <Image Source="logo.png" WidthRequest="120" HeightRequest="60" Margin="10"/>
        </StackLayout>
        <Line X1="0"
              Y1="0"
              X2="412"
              Y2="0"
              Stroke="Gray"
              StrokeThickness="1"/>

        <Label Text="Корзина"
                                    FontSize="21"
                                    TextColor="Black"
                                    FontAttributes="Bold"
                                    VerticalOptions="Start"
                                    HorizontalTextAlignment="Center"
                                    Margin="0, 10, 0, 10"/>
        <Line X1="0"
              Y1="0"
              X2="442"
              Y2="0"
              Stroke="Gray"
              StrokeThickness="1"/>

        <ScrollView>
            <StackLayout>

                <CollectionView ItemsSource="{Binding Products}" 
                        SelectionMode="Single">
                    <CollectionView.ItemTemplate>

                        <DataTemplate>
                            <Grid
                         Padding="10"
                         RowDefinitions="Auto,*"
                         ColumnDefinitions="Auto,*">
                                

                                <Image Source="{Binding Key.Image}" WidthRequest="125" HeightRequest="125"
                               VerticalOptions="Start" Grid.Column="1" Grid.Row="1" Margin="0,10,0,0"></Image>

                                <Label
                             Grid.Row="1"
                             Grid.Column="2"
                             Grid.ColumnSpan="2"
                             Padding="0, 10, 0, 0"
                             FontAttributes="Bold"
                             TextColor="Black"
                             FontSize="18"
                             Text="{Binding Key.Name}" />

                                <Label
                             Grid.Row="1"
                             Grid.Column="2"
                             Grid.ColumnSpan="2"
                             Padding="0, 45, 0, 0"
                             FontSize="15"
                             TextColor="Black"
                             Text="{Binding Key.ShortDescription}" />

                                <Label
                             Grid.Row="1"
                             Grid.Column="2"
                             Padding="0, 90, 0, 0"
                             FontSize="15"
                             TextColor="Gray"
                             Text="{Binding Key.Weight, StringFormat='Вес: {0} кг'}"
                             />

                                <Label
                             Grid.Row="1"
                             Grid.Column="2"
                             Padding="0, 120, 0, 0"
                             FontSize="15"
                             TextColor="#71BD6F"
                             Text="{Binding Key.InStock, StringFormat='В наличии: {0}'}"
                             />

                                <Label
                             Grid.Row="1"
                             Grid.Column="2"
                             Padding="0, 180, 0, 0"
                             FontSize="29"
                             TextColor="Black"
                             Text="{Binding Key.Price, StringFormat='{0}₽'}"
                             />

                                <Label
                             Grid.Row="1"
                             Grid.Column="3"
                             Padding="20, 185, 0, 0"
                             FontSize="23"
                             TextColor="Black"
                             Text="{Binding Value, StringFormat='{0} шт.'}"
                             />

                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>




        <Grid Padding="0"
                         ColumnDefinitions="Auto,*"
                         RowDefinitions="Auto, *">

            <Rectangle Fill="#F2C960"
            Grid.Row="1"
            WidthRequest="580"
            HeightRequest="100"
            Margin="-20, 0, -20, 0" />

            <Label Text="Сумма заказа: "
            Grid.Row="1"
            FontSize="18"
            TextColor="Black"
            VerticalOptions="Start"
            HorizontalTextAlignment="Start"
            Margin="50, 12, 0, 0"/>

            
            <Label x:Name="TotalPrice" Text=""
            Grid.Row="1"
            FontSize="18"
            FontAttributes="Bold"
            TextColor="Black"
            Margin="290, 12, 0, 0"/>

 

        <Button x:Name="btn_Proceed"
                Padding="10,10,10,10"
                Text="Оплатить заказ"
                Margin="50,10,0,0"
                Grid.Row="2"
                BackgroundColor="#FB6A18"
                CornerRadius="9"
                WidthRequest="160"
                HeightRequest="30"
                FontSize="13"
                TextColor="White"
                HorizontalOptions="Center"
                Clicked="BuyAndOrder"
                />

         <Button x:Name="btn_DeleteAll"
                Padding="10,10,10,10"
                Text="Очистить корзину"
                Margin="-310,10,0,0"
                Grid.Row="2"
                BackgroundColor="#DF5050"
                CornerRadius="9"
                WidthRequest="160"
                HeightRequest="30"
                FontSize="13"
                TextColor="White"
                HorizontalOptions="Center"
                Clicked="DeleteAll"
                />

        </Grid>
    </StackLayout>
</ContentPage>